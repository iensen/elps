<project default="jar">
  <target name="compile">
    <javac srcdir= "ElpsTranslator" 
    excludes="**/tests/"
   />
  </target>
  <target name="jar" depends="compile">
    <jar destfile="elps.jar"
         basedir="ElpsTranslator"
         excludes="**/tests/"
         includes="**/*.class">
      <manifest>
        <attribute name="Main-Class" value="parser.SparcTranslator" />
      </manifest>
    </jar>
  </target>
</project>
